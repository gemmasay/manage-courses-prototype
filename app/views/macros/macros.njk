{% set tabs = [
    {
      text: 'Courses',
      href: '/'
    },
    {
      text: 'Course templates',
      href: '/templates'
    },
    {
      text: 'About your organisation',
      href: '/about-your-organisation'
    },
    {
      text: 'Request access for someone else',
      href: '/request-access'
    }
  ] %}

<ul class="tabs">
  {% for tab in tabs %}
    <li {% if activeTab == tab.text %}class="active"{% endif %}>
      <a href="{{ tab.href }}">{{ tab.text }}</a>
    </li>
  {% endfor %}
</ul>
{% endmacro %}

