{% macro radioGroup(name, fields) %}
  <div class="form-group">
  {% for field in fields %}
    <div class="multiple-choice" data-target="radio-{{ name }}-part-{{ loop.index }}-extra">
      <input
        id="radio-{{ name }}-part-{{ loop.index }}"
        type="radio"
        name="{{ name }}"
        value="{{ field.name }}"
        {{ checked(name, field.name) }}
      >
      <label for="radio-{{ name }}-part-{{ loop.index }}">
        {% if field.text %}
          <span class="bold">{{ field.name }}</span>
          {{ field.text | safe }}
        {% else %}
          {{ field.name }}
        {% endif %}
      </label>
    </div>
    {% if field.more %}
      <div class="panel panel-border-wide js-hidden" id="radio-{{ name }}-part-{{ loop.index }}-extra">
        {{ field.more | safe }}
      </div>
    {% endif %}
  {% endfor %}
  </div>
{% endmacro %}

{% macro checkboxGroup(name, fields) %}
<div class="form-group">
  {% for field in fields %}
    <div class="multiple-choice" data-target="checkbox-part-{{ loop.index }}-extra">
      <input
        id="checkbox-part-{{ loop.index }}"
        type="checkbox"
        name="{{ name }}"
        value="{{ field.name }}"
        {{ checked(name, field.name) }}
      >
      <label for="checkbox-part-{{ loop.index }}">
        <span {% if field.text %}class="bold"{% endif %}>{{ field.name }}</span>
        {% if field.text %}
          <br />{{ field.text | safe }}
        {% endif %}
      </label>
    </div>
    {% if field.more %}
      <div class="panel panel-border-wide js-hidden" id="checkbox-part-{{ loop.index }}-extra">
        {{ field.more | safe }}
      </div>
    {% endif %}
  {% endfor %}
</div>
{% endmacro %}

{% macro textbox(id, label, helpText = false, size = '') %}
<div class="form-group">
  <label class="form-label" for="{{id}}">{{label | safe}}</label>
  {% if helpText %}
    <span class="form-hint">{{helpText | safe}}</span>
  {% endif %}
  <input class="form-control {{ size }}" name="{{id}}" type="text" id="{{id}}" value="{{ value(id) }}">
</div>
{% endmacro %}

